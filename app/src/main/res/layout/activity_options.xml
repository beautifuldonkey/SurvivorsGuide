<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  tools:context="beautifuldonkey.survivorsguide.OptionsActivity"
  android:background="@drawable/sg_background_5">

  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:id="@+id/btn_decreaseTextSize"
      android:text="@string/btn_subtract"
      android:layout_alignParentStart="true"/>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/textSizeLabel"
      android:text="@string/text_size"
      android:layout_centerInParent="true"
      style="@style/UiText"/>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/textSize"
      android:layout_toRightOf="@id/textSizeLabel"
      android:layout_centerInParent="true"
      style="@style/UiText"/>
    <Button
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:id="@+id/btn_increaseTextSize"
      android:text="@string/btn_add"
      android:layout_alignParentEnd="true"/>
  </RelativeLayout>

</RelativeLayout>
