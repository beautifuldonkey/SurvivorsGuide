<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/sg_background_5"
    tools:context="beautifuldonkey.survivorsguide.ProfessionDetailActivity">

    <TextView
        android:id="@+id/professionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/UiText"/>

    <View
        style="@style/Divider"
        android:id="@+id/nameDivider"
        android:layout_below="@+id/professionName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/professionDesc"
        android:layout_below="@+id/nameDivider"
        style="@style/UiText"/>

    <View
        style="@style/Divider"
        android:id="@+id/descDivider"
        android:layout_below="@+id/professionDesc"/>

    <ListView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/professionSkills"
        android:layout_below="@+id/descDivider"
        style="@style/UiText"/>

</RelativeLayout>
